<div class="row">
    <div class="jumbotron">
        <div class="col-md-12 text-center">
            <button type="button" class="btn btn-default" id="btn-search">Search</button>
            <input type="text" class="input-sm" placeholder="a location name" id="txtLocation" />
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <div id="current-conditions-template" class="conditions-template hidden">
            <p>{LocalizedName}</p>
            <p>{CelsiusTemperature} {WeatherText}</p>
        </div>
    </div>
    <div class="col-md-4">
        <button type="button" class="btn btn-default hidden">
            <i class="fa fa-heart"></i>
            Add to Favorites
        </button>
    </div>

    <div class="col-md-4 border-left" id="locationsSearchResults">
        
    </div>
</div>

<div id="templates" class="hidden">
    <div id="locations-template" class="locations-template" locationkey="215854">
        <p>{LocalizedName}</p>
    </div>
</div>

